{% extends "layout.html.twig" %}

{% block styles %}
{{ parent() }}
<link rel="stylesheet" href="/js/select2/select2.css" type="text/css" />
{% endblock %}

{% block content %}
<div class="list screen">
    <ul class="fancy-list">
        <li>
            <div class="hiking badge">
                <span></span>
            </div>
            <div class="toggle">
                <p>Hiking @ <strong>Mt Philo</strong></p>
            </div>
            <div>
                <span>X</span>
            </div>
        </li>
        <li>
            <div class="drinking badge">
                <span></span>
            </div>
            <div class="toggle">
                <p>Drinking @ <strong>Fiddlehead</strong></p>
            </div>
            <div>
                <span>X</span>
            </div>
        </li>
        <li>
            <div class="eating badge">
                <span></span>
            </div>
            <div class="toggle">
                <p>Dinner @ <strong>Shelburne Farms</strong></p>
            </div>
            <div>
                <span>X</span>
            </div>
        </li>
    </ul>
    <div id="map-canvas" class="google-map" style="height: 200px; width: 100%;"><img src="/img/map.png" /></div>
    <div id="directions" class="adventure">
    </div>
</div>

{% endblock %}

{% block scripts %}
{{ parent() }}
<script src="https://maps.googleapis.com/maps/api/js?sensor=true&libraries=geometry"></script>
<script src="/js/gmap-extend.js"></script>
<script src="/js/map.js"></script>
<script>
    map.config({
        id: 'map-canvas',
        map: {center: [43.83130289858731, -72.0268984375]}
    });
    map.init();
    navigator.geolocation.getCurrentPosition(function (pos) {
        nextDirection = false;//Global for demo
        treasure = 'http://images2.wikia.nocookie.net/__cb20130626170632/nitrome/images/c/cb/Treasure_chest.png';
        var locations = [[43.48156941314745, -71.8950625], [43.89863026081283, -71.6918154296875], [44.22231761201409, -72.1752138671875]],
            ids = locations.map(function (p) {
                return map.addMarker({position: p, icon: treasure});
            });

        function confirm () {
            $('.screen').removeClass('list').addClass('directions');
            map.resize('100%', '508px');
            directions.get(pos.coords, locations[0], locations[1], locations[2], function (pos) {
                var pos = mapUtils.latLngToArray(pos),
                    proximity = _.filter(locations, function (p) {
                        return mapUtils.inRadius(pos, 0.002, p);
                    });
                if (proximity.length) {
                    console.log('on target');
                }
            });
        }
        confirm();
    });

    document.addEventListener('keyup', function (e) {
        if (e.keyCode = 71) {
            nextDirection = true;
        }
    });
</script>
<script>
	$(".menu, .overlay").click(function() {
		$("nav").toggleClass( "open" );
	});
	$(".toggle").click(function() {
		$(this).closest("li").toggleClass( "open" );
	});
</script>
{% endblock %}
