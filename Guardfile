# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'livereload' do
  watch(%r{src/.+\.(php)})
  watch(%r{src/controllers/.+\.(php)})
  watch(%r{src/Foo/.+\.(php)})
  watch(%r{templates/.+\.(css|js|html|twig)})
  watch(%r{templates/Foo/.+\.(css|js|html|twig)})
#  watch(%r{config/locales/.+\.yml})
#  # Rails Assets Pipeline
#  watch(%r{(app|vendor)(/assets/\w+/(.+\.(css|js|html))).*}) { |m| "/assets/#{m[3]}" }
end
